{
    "name": "brickhouse/reflection",
    "description": "Reflection package for classes, functions, properties, etc.",
    "license": "MIT",
    "keywords": ["framework", "brickhouse", "mvc"],
    "homepage": "https://github.com/brickhouse-php/brickhouse",
    "support": {
        "issues": "https://github.com/brickhouse-php/brickhouse/issues",
        "source": "https://github.com/brickhouse-php/brickhouse"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Max T. Kristiansen",
            "email": "me@maxtrier.dk",
            "role": "Author",
            "homepage": "https://maxtrier.dk"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "autoload": {
        "psr-4": {
            "Brickhouse\\Reflection\\": "src"
        },
        "classmap": [
            "src/"
        ]
    },
    "suggest": {
        "brickhouse/core": "Required to reflect on classes defined in Composer"
    }
